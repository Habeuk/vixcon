{% if content %}
	{% if content.image.layout_builder_add_block %}
		{{ content.image }}
	{% endif %}
	{% if content.image|layout_bg_img %}
		{% set attributes = attributes.merge(content.image|layout_bg_img) %}
	{% endif %}
	<div {{ attributes.addClass('vixon-section-title')}}>
		<div class="container">
			<div class="vixon-heading">
				{% if content.intro|has_value %}
					<span {{ region_attributes.intro.addClass(['stroked-text','intro'])}}>{{ content.intro }}</span>
				{% endif %}
				<div class="title">
					{% if content.title|has_value %}
						<h2 {{ region_attributes.title.addClass(['head-title','title']) }}>
							{{ content.title }}
						</h2>
					{% endif %}
					{% if content.description|has_value %}
						<div {{ region_attributes.description.addClass(['title-description','description']) }}>
							{{ content.description }}
						</div>
					{% endif %}
				</div>
			</div>
			{% if content.container|has_value %}
				<div class="row">
					<div class="col-12">
						{{ content.container }}
					</div>
				</div>
			{% endif %}

			{% if content.call_to_action_text|has_value or content.call_to_action|has_value %}
				<div class="row">
					<div class="col-lg-12">
						{% if content.call_to_action_text|has_value %}
							<h5 {{ region_attributes.call_to_action_text.addClass(['question','call_to_action_text']) }}>
								{{ content.call_to_action_text }}
							</h5>
						{% endif %}

						{% if content.call_to_action|has_value %}
							<div {{ region_attributes.call_to_action.addClass(['call_to_action']) }}> {{ content.call_to_action }} </div>
						{% endif %}
					</div>
				</div>
			{% endif %}

		</div>
	</div>

{% endif %}
