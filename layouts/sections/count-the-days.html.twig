{% if content %}
	<div {{ attributes.addClass(['vixon-counter-section','moove-up'])}}>
		<div class="container">
			<div class="counter-inner">
				<div class="row align-items-center">
					<div class="col-lg-6">
						<div class="counter-stat">
							<h2 class="cs-light h3">
								{% if content.bold_title %}
                                    <span {{ region_attributes.bold_title.addClass('cs-bold') }}>{{ content.bold_title }}</span>
                                {% endif %}
                                {% if content.title %}
                                    {#<br> ne pas utiliser les balises br sous drupal#}
                                    {{ content.title }}
                                {% endif %}
								</h2>
                            {% if content.description %}
							<div {{ region_attributes.description.addClass('cs-desc') }}>
								{{ content.description }}
							</div>
						{% endif %}
						</div>
					</div>
					<div class="col-lg-6">
					<div class="small-timer">
						<div class="syotimer__body">
							<div class="row">
								<div class="col-md-3 counter-item">
									<span id="nicamexCounterDays" class="bg-primary counter-circle"></span>
									<span class="text">Jours</span>
								</div>
								<div class="col-md-3 counter-item">
									<span id="nicamexCounterHours" class="bg-primary counter-circle"></span>
									<span class="text">Heures</span>
								</div>
								<div class="col-md-3 counter-item">
									<span id="nicamexCounterMinutes" class="bg-primary counter-circle">25</span>
									<span class="text">Minutes</span>
								</div>
								<div class="col-md-3 counter-item">
									<span id="nicamexCounterSeconds" class="bg-primary counter-circle">25</span>
									<span class="text">Secondes</span>
								</div>
							</div>
						</div>
					</div>
				</div>
				</div>
			</div>
		</div>
	</div>
{% endif %}
